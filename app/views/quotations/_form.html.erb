<%= form_for @quotation, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :content, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :source_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :author, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  quotations_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
